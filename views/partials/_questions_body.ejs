<h1>All Questions</h1>
<a href="/questions/ask" class="btn btn-primary mb-3">Ask a Question</a>

<ul>
  <% questions.forEach(q => { %>
    <li class="card p-3 mb-2">
      <p><%= q.text %></p>

      <% if (q.media) { %>
        <img src="<%= q.media %>" alt="attachment" style="max-width:200px;">
      <% } %>

      <h4>Replies:</h4>
      <ul>
        <% q.replies.forEach(r => { %>
          <li><%= r.text %></li>
        <% }) %>
      </ul>

      <form action="/questions/<%= q._id %>/reply" method="POST" class="mt-2">
        <input type="text" name="text" placeholder="Write a reply" required class="form-control mb-2">
        <button type="submit" class="btn btn-sm btn-success">Reply</button>
      </form>

      <!-- âœ… Edit + Delete in the same row -->
      <div class="d-flex align-items-center mt-2">
        <form action="/questions/<%= q._id %>/edit" method="POST" class="d-flex flex-grow-1 me-2">
          <input type="text" name="text" class="form-control me-2" value="<%= q.text %>" required>
          <button type="submit" class="btn btn-sm btn-warning">Edit</button>
        </form>

        <form action="/questions/<%= q._id %>/delete" method="POST" 
              onsubmit="return confirm('Are you sure you want to delete this question?');">
          <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        </form>
      </div>
    </li>
  <% }) %>
</ul>
