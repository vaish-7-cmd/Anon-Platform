<!DOCTYPE html>
<html>
<head>
  <title>Anonymous Q&A + Confessions</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap FIRST -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Your CSS AFTER Bootstrap (cache-busted) -->
  <link rel="stylesheet" href="/css/style.css?v=20250822">

  <!-- Minimal inline fallback so you SEE dark mode even if style.css is cached/missing -->
  <style>
    /* fallback only ‚Äî safe to keep */
    body.dark-mode{background:#121212!important;color:#f1f1f1!important;}
    body.dark-mode .container{background:#1e1e1e!important;color:#f1f1f1!important;}
    body.dark-mode nav.navbar{background:#222!important;}
    body.dark-mode .navbar a, body.dark-mode .navbar .navbar-brand{color:#f1f1f1!important;}
  </style>
</head>
<body>
  <!-- No bg-light / bg-dark here; our CSS will color it -->
  <nav class="navbar mb-4">
    <div class="container">
      <a class="navbar-brand" href="/">Anon Platform</a>
      <div>
        <!-- ‚úÖ Updated classes -->
        <a class="btn btn-nav btn-sm me-2" href="/questions">Questions</a>
        <a class="btn btn-nav btn-sm" href="/confessions">Confessions</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <button id="theme-toggle" class="theme-btn">üåô</button>
    <%- body %>
  </div>

  <script>
    // tiny helper so the page height fills the screen (nice for dark bg)
    document.documentElement.style.minHeight = '100%';
    document.body.style.minHeight = '100vh';

    const toggleBtn = document.getElementById('theme-toggle');
    const body = document.body;

    // Apply saved theme on load
    if (localStorage.getItem('theme') === 'dark') {
      body.classList.add('dark-mode');
      toggleBtn.textContent = '‚òÄÔ∏è';
    }

    // Toggle
    toggleBtn.addEventListener('click', () => {
      body.classList.toggle('dark-mode');
      const isDark = body.classList.contains('dark-mode');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
      toggleBtn.textContent = isDark ? '‚òÄÔ∏è' : 'üåô';

      // Debug line (optional): open DevTools Console to see this
      console.log('Theme now:', isDark ? 'dark' : 'light', 'Body classes:', body.className);
    });
  </script>
</body>
</html>
